{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cargo build",
            "type": "shell",
            "command": "cargo",
            "args": ["build"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Build binary",
            "type": "shell",
            "command": "C:\\Users\\carl\\.platformio\\packages\\toolchain-gccarmnoneeabi\\bin\\arm-none-eabi-objcopy.exe",
            "args": [
                "--output-target", "binary",
                "./target/thumbv6m-none-eabi/debug/picorust",
                "./target/thumbv6m-none-eabi/debug/picorust.bin"],
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Cargo build"
        }
    ]
}